{% extends 'base.html.twig' %}

{% block title %}Page d'Ajout d'Articles{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Formulaire d'ajout d'articles</h1>

    {% if article is defined %}
    <form action="{{path("article_update", {"article":article.id} )}}" method="post">
    {% else %}
    <form action="{{path("article_new")}}" method="post">
    {% endif %}
    <div>
        <label for="title">Title</label>
        <input type="text" id="" name="title" value="{{ article.title | default("") }}">
    </div>
    <div>
        <label for="content">Content</label>
        <input type="textarea" id="" name="content" value="{{ article.content | default("") }}">
    </div>
    <div>
        <label for="mail">Short Content</label>
        <input type="text" id="" name="short_content" value="{{ article.shortContent | default("") }}">
    {% if article is defined %}
    <button>Modifier l'article</button>
        {% else %}
    <button>Envoyer l'article</button>
        {% endif %}
    </div>

</form>
</div>
{% endblock %}